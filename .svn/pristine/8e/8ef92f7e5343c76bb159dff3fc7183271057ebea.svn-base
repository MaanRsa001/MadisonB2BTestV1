html, body
{
	padding: 0;
	margin: 0;
}
body {
	font-family: Arial, Helvetica, Verdana;
	font-weight: 300;
	font-size: 14px;
	color: #666;
	overflow: scroll;
	overflow-x: hidden;
	position: relative;
}
body *
{
	text-shadow: none;
}
h1, h2, h3, h4, h5, h6
{
	line-height: 1;
	font-weight: bold;
	margin: 20px 0 10px 0;
}
h1, h2, h3
{
	font-size: 18px;
}
h4, h5, h6
{
	font-size: 16px;
}
p
{
	margin: 0 0 10px 0;
}
/*a, a:link, a:active, a:visited, a:hover
{
	color: inherit;
	text-decoration: underline;
}*/

nav:not(.mm-menu)
{
	display: none;
}

.header
{
	padding: 10px;
}

.header
{	
	/*font-size: 16px;*/
	font-weight: bold;
	color: #ffffff;
	-moz-box-sizing: border-box;
	box-sizing: border-box;	
	width: 100%;
	text-align: center;
}

.footer
{	
	font-family: Arial;
	background: #00285E;
	font-size: 12px;
	color: #ffffff;
	-moz-box-sizing: border-box;
	box-sizing: border-box;	
	width: 100%;
}

.header.fixed
{
	position: fixed;
	top: 0;
	left: 0;
}
.footer.fixed
{
	position: fixed;
	bottom: 0;
	left: 0;
}
